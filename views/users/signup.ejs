<% layout("layouts/boilerplate.ejs") %>

<div class="row">
    <h1 class="col-8 offset-2">Sign up on Wanderlust</h1>
    <div class="col-8 offset-2">
   <form action="/signup"  method ="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label
          class="form-label col-form-label " 
          for="username">Username </label>
        <input  
        class="form-control"
         name="username" 
        id="username"
        type="text"
         required >

        <div class="valid-feedback"> Looks good!</div>
      </div>
      <div class="mb-3">
        <label
          class="form-label col-form-label " 
          for="email">Email</label>
        <input  
        class="form-control"
         name="email" 
        id="email"
        type="email"
         required >

      </div>
      <div class="mb-3">
        <label
          class="form-label col-form-label " 
          for="password">Password</label>
        <input  
        class="form-control"
         name="password" 
        id="password"
        type="password"
         required >
      </div>
      <button class ="btn btn-success"> signup</button>
   </form>
        </div>
        </div>